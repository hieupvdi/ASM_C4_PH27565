@using DuAn.Models;
@model IEnumerable<DuAn.Models.BillDetails>

@{
    ViewData["Title"] = "ShowAllBillDetails";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
       List<BillDetails> listbillDetails = ViewBag.listbillDetails;
     List<Product> listProduct = ViewBag.listProduct;
}


<section class="content" >

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Hóa Đơn CT</h3>

        </div>
        <div class="card-body"> 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdHD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in listbillDetails) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td></td>
        </tr>
}
    </tbody>
</table>
        </div>


        <div class="card-footer"> 

        </div>

    </div>

</section>
